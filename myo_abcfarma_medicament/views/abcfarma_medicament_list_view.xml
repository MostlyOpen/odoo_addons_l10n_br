<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_abcfarma_medicament_list_view_form" model="ir.ui.view">
            <field name="name">myo.abcfarma.medicament.list.form</field>
            <field name="model">myo.abcfarma.medicament.list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="ABCFarma Lists" version="7.0">
                    <sheet string="ABCFarma List">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name"/>
                            <h2>
                                <field name="name" placeholder="List Name..."/>
                            </h2>
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h2>
                                <field name="code" placeholder="Code..."/>
                            </h2>
                            <label for="description"/>
                            <h3>
                                <field name="description" placeholder="Description..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Other Information">
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page name="settings" string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_abcfarma_medicament_list_view_tree" model="ir.ui.view">
            <field name="name">myo.abcfarma.medicament.list.tree</field>
            <field name="model">myo.abcfarma.medicament.list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="ABCFarma List">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_abcfarma_medicament_list_view_search" model="ir.ui.view">
            <field name="name">myo.abcfarma.medicament.list.search</field>
            <field name="model">myo.abcfarma.medicament.list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="ABCFarma List">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_abcfarma_medicament_list_action" model="ir.actions.act_window">
            <field name="name">ABCFarma Lists</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.abcfarma.medicament.list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_abcfarma_medicament_list_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new ABCFarma Medicament List.
              </p>
            </field>
        </record>
        
    </data>
</openerp>
