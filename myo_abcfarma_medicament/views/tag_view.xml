<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="myo_abcfarma_medicament_view_tree_tag" model="ir.ui.view">
            <field name="name">myo.abcfarma.medicament.tree</field>
            <field name="model">myo.abcfarma.medicament</field>
            <field name="inherit_id" ref="myo_abcfarma_medicament_view_tree"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="code" position="before">
                    <field name="tag_ids" groups="myo_base.group_tag_user"/>
                </field>
            </field>
        </record>

        <record id="myo_abcfarma_medicament_view_form_tag" model="ir.ui.view">
            <field name="name">myo.abcfarma.medicament.form</field>
            <field name="model">myo.abcfarma.medicament</field>
            <field name="inherit_id" ref="myo_abcfarma_medicament_view_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <label for="name" position="before">
                    <label for="tag_ids"  groups="myo_base.group_tag_user" class="oe_edit_only"/>
                    <h2>
                        <field name="tag_ids" widget="many2many_tags" placeholder="Tags..." options="{'no_open': False, 'no_create': True}" groups="myo_base.group_tag_user"/>
                    </h2>
                </label>
            </field>
        </record>

        <record id="myo_abcfarma_medicament_view_search_tag" model="ir.ui.view">
            <field name="name">myo.abcfarma.medicament.search</field>
            <field name="model">myo.abcfarma.medicament</field>
            <field name="inherit_id" ref="myo_abcfarma_medicament_view_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="tag_ids" />
                </field>
            </field>
        </record>

        <record id="myo_tag_view_form" model="ir.ui.view">
            <field name="name">myo.tag.form</field>
            <field name="model">myo.tag</field>
            <field name="inherit_id" ref="myo_tag.myo_tag_view_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page string="Tag for" position="inside">
                    <group string="ABCFarma Medicaments">
                        <field name="medicament_ids" colspan="4" nolabel="1" />
                    </group>
                </page>
            </field>
        </record>

    </data>
</openerp>
