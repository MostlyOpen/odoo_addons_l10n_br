<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_address_view_form_l10n_br" model="ir.ui.view">
            <field name="name">myo.address.form</field>
            <field name="model">myo.address</field>
            <field name="inherit_id" ref="myo_address.myo_address_view_form"/>
            <field name="arch" type="xml">
                <field name="zip" position="replace"/>
                <field name="street" position="replace">
                    <field name="zip" placeholder="CEP"/>
                    <field name="street" placeholder="Street"/>
                    <field name="number" placeholder="Number"/>
                    <field name="district" placeholder="Disctrict"/>
                </field>
                <field name="street2" position="replace">
                    <field name="street2" placeholder="Complement"/>
                </field>
                <field name="state_id" position="attributes">
                    <attribute name="domain">[('country_id','=',country_id)]
                    </attribute>
                    <attribute name="style">width: 70%%</attribute>
                </field>
                <field name="state_id" position="after">
                    <field name="l10n_br_city_id" placeholder="City"/>
                </field>
                <field name="city" position="replace">
                    <field name="city" invisible="1"/>
                </field>
                <field name="country_id" position="replace"/>
                <field name="state_id" position="before">
                    <field name="country_id" placeholder="Country"/>
                </field>
                <field name="zip" position="attributes">
                    <attribute name="style">width: 50%</attribute>
                </field>
                <field name="zip" position="after">
                    <button name="zip_search" type="object" class="oe_inline, oe_edit_only">
                        <i class="fa fa-search"></i>
                    </button>
                </field>
            </field>
        </record>

        <record id="myo_address_view_tree_l10n_br" model="ir.ui.view">
            <field name="name">myo.address.tree</field>
            <field name="model">myo.address</field>
            <field name="inherit_id" ref="myo_address.myo_address_view_tree"/>
            <field name="arch" type="xml">
                <field name="city" position="replace">
                    <field name="l10n_br_city_id" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="myo_address_view_search_l10n_br" model="ir.ui.view">
            <field name="name">myo.address.filter</field>
            <field name="model">myo.address</field>
            <field name="inherit_id" ref="myo_address.myo_address_view_search"/>
            <field name="arch" type="xml">
                <field name="city" position="replace">
                    <field name="l10n_br_city_id"/>
                </field>
                <filter name="city" position="replace">
                    <filter name="city" string="City" context="{'group_by': 'l10n_br_city_id'}"/>
                    <filter name="district" string="District" context="{'group_by': 'district'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
