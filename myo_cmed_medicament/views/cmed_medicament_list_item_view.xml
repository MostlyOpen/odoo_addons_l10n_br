<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_cmed_medicament_list_item_view_form" model="ir.ui.view">
            <field name="name">myo.cmed.medicament.list.item.form</field>
            <field name="model">myo.cmed.medicament.list.item</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="CMED List Itens" version="7.0">
                    <sheet string="CMED List Item">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="list_id" class="oe_edit_only"/-->
                            <label for="list_id"/>
                            <h2>
                                <field name="list_id" placeholder="List..." options="{'no_open': False, 'no_create': True}"/>
                            </h2>
                            <!--label for="medicament_id" class="oe_edit_only"/-->
                            <label for="medicament_id"/>
                            <h2>
                                <field name="medicament_id" placeholder="Medicament..." options="{'no_open': False, 'no_create': True}"/>
                            </h2>
                            <label for="order"/>
                            <h3>
                                <field name="order" placeholder="Order..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Prices">
                                <group>
                                    <group>
                                        <field name="pf_0"/>
                                        <field name="pf_12"/>
                                        <field name="pf_17"/>
                                        <field name="pf_18"/>
                                        <field name="pf_19"/>
                                        <field name="pf_17_zfm"/>
                                    </group>
                                    <group>
                                        <field name="pmc_0"/>
                                        <field name="pmc_12"/>
                                        <field name="pmc_17"/>
                                        <field name="pmc_18"/>
                                        <field name="pmc_19"/>
                                        <field name="pmc_17_zfm"/>
                                    </group>
                                    <group>
                                        <field name="ultima_alteracao"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Information">
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_cmed_medicament_list_item_view_tree" model="ir.ui.view">
            <field name="name">myo.cmed.medicament.list.item.tree</field>
            <field name="model">myo.cmed.medicament.list.item</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="CMED List Item">
                    <field name="list_id"/>
                    <field name="medicament_id"/>
                    <field name="order"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_cmed_medicament_list_item_view_search" model="ir.ui.view">
            <field name="name">myo.cmed.medicament.list.item.search</field>
            <field name="model">myo.cmed.medicament.list.item</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="CMED List Item">
                    <field name="list_id"/>
                    <field name="medicament_id"/>
                    <field name="order"/>
                    <field name="notes"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="CMED List" domain="[]" context="{'group_by': 'list_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_cmed_medicament_list_item_action" model="ir.actions.act_window">
            <field name="name">CMED List Itens</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.cmed.medicament.list.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_cmed_medicament_list_item_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new CMED Medicament List Item.
              </p>
            </field>
        </record>
        
        <record id="myo_cmed_medicament_list_view_form_item" model="ir.ui.view">
            <field name="name">myo.cmed.medicament.list.form</field>
            <field name="model">myo.cmed.medicament.list</field>
            <field name="inherit_id" ref="myo_cmed_medicament_list_view_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="CMED List Itens">
                        <group>
                            <field name="cmed_list_item_ids" colspan="4" nolabel="1" />
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
